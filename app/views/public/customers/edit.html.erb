
<h2>登録情報の編集</h2>
<%= form_for(@customer, url: update_information_path) do |f| %>
    <%= render 'layouts/error_messages', resource: @customer %>
    <table>
        <thead>
            <th></th>
            <th></th>
            <th></th>
        </thead>
        <tbody>
            <tr>
                <td>名前</td>
                <td><%= f.label :first_name, "(姓)", class: "customer_name" %> <%= f.text_field :first_name %></td>
                <td><%= f.label :last_name, "(名)", class: "customer_name" %> <%= f.text_field :last_name %></td>
            </tr>
            <tr>
                <td>フリガナ</td>
                <td><%= f.label :first_name_kana, "(セイ)" %> <%= f.text_field :first_name_kana %></td>
                <td><%= f.label :last_name_kana, "(メイ)" %> <%= f.text_field :last_name_kana %></td>
            </tr>
            <tr>
                <td><%= f.label :email, "メールアドレス" %></td>
                <td colspan="2"><%= f.email_field :email %></td>
            </tr>
            <tr>
                <td><%= f.label :postal_code, "郵便番号" %></td>
                <td colspan="2"><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
                <td><%= f.label :address, "住所" %></td>
                <td colspan="2"><%= f.text_field :address %></td>
            </tr>
            <tr>
                <td><%= f.label :telephone_number, "電話番号" %></td>
                <td colspan="2"><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
                <td colspan="2"><%= f.submit "編集内容を保存"%></td>
                <td><%= link_to "退会する", confirm_unsubscribe_path %></td>
            </tr>
        </tbody>
    </table>
<% end %>
