<div class="container my-5">
  <div class="row">
    <div class="col-md-auto md-3 bg-light">
      <h4>新規会員登録</h4>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row my-3">
      <div class="col-md-3">
        名前
      </div>
      <div class="col-md-1">
        <%= f.label :last_name %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :last_name, class: 'form-control', placeholder: "山田"%>
      </div>
      <div class="col-md-1 p-">
        <%= f.label :first_name %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name, class: 'form-control', placeholder: "太郎" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3 ">
        フリガナ
      </div>
      <div class="col-md-1">
        <%= f.label :last_name_kana %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :last_name_kana , class: 'form-control', placeholder: "ヤマダ"%>
      </div>
      <div class="col-md-1">
        <%= f.label :first_name_kana %>
      </div>
      <div class="col-md-3 ">
        <%= f.text_field :first_name_kana, class: 'form-control' , placeholder: "タロウ"%>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3">
        <%= f.label :email %>
      </div>
      <div class="offset-0 offset-md-1 col-md-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "yamada.taro@gmail.com" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3">
        <%= f.label :postal_code %>
      </div>
      <div class="offset-0 offset-md-1 col-md-8">
        <%= f.text_field :postal_code, class: 'form-control', placeholder: "0001111"%>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3">
        <%= f.label :address %>
      </div>
      <div class="offset-0 offset-md-1 col-md-8">
        <%= f.text_field :address, class: 'form-control',placeholder: "東京都渋谷区代々木"%>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3">
        <%= f.label :telephone_number %>
      </div>
      <div class="offset-0 offset-md-1 col-md-8">
        <%= f.text_field :telephone_number , class: 'form-control', placeholder: "00011112222" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3">
        <%= f.label :password %>
      </div>
      <div class="offset-0 offset-md-1 col-md-8">
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-5 actions text-center m-auto">
        <%= f.submit "新規登録", class: "btn btn-success w-50" %>
      </div>
    </div>


  <% end %>


  <%#= render "public/shared/links" %>


  <div class="row mt-3">
    <div class="col-5 actions text-center m-auto">
      <p>既に登録済みの方は<span class="mx-1"><%= link_to "こちら", new_customer_session_path %></span>からログインしてください。</p>
    </div>
  </div>
