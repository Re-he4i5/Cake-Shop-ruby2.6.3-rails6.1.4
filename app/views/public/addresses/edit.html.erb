<h2>商品一覧</h2>

<div>
    <% @items.each do |item| %>
        <%= link_to item_path(item) do %>
            <%= image_tag item.get_image, format: "jpeg", fallback: "no-image.png" %>
            <h5><%= item.genre.name %></h5>
            <p><%= item.name %></p>
            <p>
                <%= item.with_tax_price %>円 
                <% if item.is_active? %>
                    <span class="text-active">販売中</span>
                <% else %>
                    <span class="text-invalid">販売停止中</span>
                <% end %>
            </p>
        <% end %>
    <% end %>
</div>

