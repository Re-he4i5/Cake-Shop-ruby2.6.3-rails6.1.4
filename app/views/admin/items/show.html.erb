<table>
    <thead>
        <tr>
            <th></th>	
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>画像</td>
            <td><%= image_tag @item.get_image(50,50) %></td>
        </tr>

        <tr>
            <td>タイトル</td>
            <td><%= @item.name %></td>
        </tr>
        <tr>
            <td>説明文</td>
            <td><%= @item.introduction %></td>
        </tr>
        <tr>
            <td>ジャンル名</td>
            <td><%= @item.genre.name %></td>
        </tr>
        <tr>
            <td>値段</td>
            <td><%= @item.price %>円</td>
        </tr>
        <tr>
            <td>販売ステータス</td>
            <td>
                <% if @item.is_active? %>
                    販売中
                <% else %>
                    販売停止中
                <% end %>
            </td>
        </tr>
    </tbody>
</table>


