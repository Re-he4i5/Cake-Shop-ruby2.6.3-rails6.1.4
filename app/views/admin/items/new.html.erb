<%= form_with model: @item, url: admin_items_path do |f| %>
	<%= render 'layouts/error_messages', resource: @item %>
		<table class="admin_item_info item_form">
			<thead>
				<tr>
					<th></th>	
					<th></th>
				</tr>
			</thead>
			<tbody>

                <tr>
					<td><%= f.label :image, "画像" %></td>
					<td><%= f.file_field :image %></td>
				</tr>

				<tr>
					<td><%= f.label :name, "タイトル" %></td>
					<td><%= f.text_field :name %></td>
				</tr>

				<tr>
					<td><%= f.label :introduction, "説明文" %></td>
					<td><%= f.text_area :introduction %></td>
				</tr>

				<tr>
					<td><%= f.label :genre_id, "ジャンル名" %></td>
					<td class="select_field"><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
				</tr>

				<tr>
					<td><%= f.label :price, "値段" %></td>
					<td><%= f.text_field :price %> 円</td>
				</tr>

				<tr>
					<td><%= f.label :sales_status, "販売ステータス" %></td>
					<td class="select_field">
						<%= f.radio_button :is_active, true %>
						<%= f.label :is_active, "販売中" %>
						<%= f.radio_button :is_active, false %>
						<%= f.label :is_active, "販売停止中" %>
					</td>
				</tr>

			</tbody>
		</table>
		<div>
			<%= f.submit '新規投稿' %>
		</div>
<% end %>