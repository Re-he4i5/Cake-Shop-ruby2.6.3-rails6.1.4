<table>
	<thead>
		<tr>
			<th>商品id</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>販売ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @items.each do |item| %>
			<tr>
				<td><%= item.id %></td>
				<td><%= item.name %></td>
				<td><%= item.price %> 円 </td>
				<td><%= item.genre.name %></td>
				<td>
					<% if item.is_active? %>
						販売中
					<% else %>
						販売停止中
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>


