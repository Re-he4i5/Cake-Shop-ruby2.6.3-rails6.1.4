<div class="container">
  <div class="row">
    <div class="col-md-auto bg-light">
      <h4 class="font-weight-bold">
        商品一覧
      </h4>
    </div>
    <div class="col text-right">
      <%= link_to "商品新規登録", new_admin_item_path, class:"btn btn-info " %>
    </div>
  </div>
  <div class="row my-5">
    <table class="table">
      <thead class="bg-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
			        <u><%=item.name%></u>
		      	<%end%>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active? %>
            	<div class="text-success">販売中</div>
            <% else %>
            	<div class="text-black-50">販売停止中</div>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

