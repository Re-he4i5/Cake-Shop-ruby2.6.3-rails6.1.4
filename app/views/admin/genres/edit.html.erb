<div class="container my-5">
	<div class="row">
    	<div class="col-md-auto bg-light">
      		<h4 class="font-weight-bold">
        		ジャンル編集
      		</h4>
    	</div>
  	</div>

	<%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
			<%= render 'layouts/error_messages', resource: @genre %>
		<div class="row my-5">
			<div class="col-md-20">
				ジャンル名
				<%= f.text_field :name %>
				<%= f.submit '変更を保存', class:' m-3 btn btn-success' %>
      		</div>
    	</div>
	<% end %>
	
</div>
