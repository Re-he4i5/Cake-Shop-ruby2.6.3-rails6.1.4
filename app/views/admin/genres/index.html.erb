<%= form_with model:@genre, url: admin_genres_path do |f| %>
	<%= render 'layouts/error_messages', resource: @genre %>
	<%= f.label :name, "ジャンル名:" %>
	<%= f.text_field :name %>

	<%= f.submit '登録する' %>
<% end %>

<h3>ジャンル一覧</h3>
<table>
    <thead>
        <tr>
            <th>ジャンル名</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集", edit_admin_genre_path(genre) %></td>
            </tr>
        <% end %>
    </tbody>
</table>