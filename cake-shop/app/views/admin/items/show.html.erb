<div class="container">
    <h4 class="my-5">
        商品詳細
    </h4>
    <div class="row py-4", style="margin-left:15%;">
        <div class="col-4 px-0">
            <h4 class="font-weight-bold">
                <%= image_tag @item.get_image(250,250) %>
            </h4>
        </div>
        <div class="col-5">
            <div class="row py-2">
                <div class="col-4">
                    商品名
                </div>
                <div class="col-8">
                    <%= @item.name %>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-4">
                    商品説明
                </div>
                <div class="col-8">
                    <%= @item.introduction %>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-4">
                    ジャンル
                </div>
                <div class="col-8">
                    <%= @item.genre.name %>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-4">
                    税込価格<br>(税抜価格)
                </div>
                <div class="col-8">
                    <%= @item.with_tax_price %>(<%= @item.price %>)円
                </div>
            </div>
            <div class="row py-2">
                <div class="col-4">
                    販売ステータス
                </div>
                <div class="col-8">
                    <% if @item.is_active? %>
                        <span class="text-success"><strong>販売中</strong></span>
                    <% else %>
                        <span class="text-secondary"><strong>販売停止中</strong></span>
                    <% end %>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <%#= link_to "編集する", admin_edit_item_path(@item.id), class:"btn btn-outline-secondary" %>
                </div>
            </div>
        </div>
    </div>
</div>