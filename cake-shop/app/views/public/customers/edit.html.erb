<div class="container">
  <div class="row my-3 ml-5">
    <div class="col-md-auto bg-light">
      <h4 class="font-weight-bold">
        会員情報編集
      </h4>
    </div>
  </div>

  <%= form_with model: @customer, url: update_information_path, method: :patch do |f| %>
    <%= render 'layouts/error_messages', resource: @customer %>
    <div class="row my-3">
      <div class="col-md-3">
        名前
      </div>
      <div class="col-md-1">
        <%= f.label :last_name %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :last_name, class: 'form-control', placeholder: "山田"%>
      </div>
      <div class="col-md-1 p-">
        <%= f.label :first_name %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name, class: 'form-control', placeholder: "太郎" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3 ">
        フリガナ
      </div>
      <div class="col-md-1">
        <%= f.label :last_name_kana %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :last_name_kana , class: 'form-control', placeholder: "ヤマダ"%>
      </div>
      <div class="col-md-1">
        <%= f.label :first_name_kana %>
      </div>
      <div class="col-md-3 ">
        <%= f.text_field :first_name_kana, class: 'form-control' , placeholder: "タロウ"%>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3">
        <%= f.label :email %>
      </div>
      <div class="offset-0 offset-md-1 col-md-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "yamada.taro@gmail.com" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3">
        <%= f.label :postal_code %>
      </div>
      <div class="offset-0 offset-md-1 col-md-8">
        <%= f.text_field :postal_code, class: 'form-control', placeholder: "0001111"%>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3">
        <%= f.label :address %>
      </div>
      <div class="offset-0 offset-md-1 col-md-8">
        <%= f.text_field :address, class: 'form-control',placeholder: "東京都渋谷区代々木"%>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3">
        <%= f.label :telephone_number %>
      </div>
      <div class="offset-0 offset-md-1 col-md-8">
        <%= f.text_field :telephone_number , class: 'form-control', placeholder: "00011112222" %>
      </div>
    </div>

  <div class="row mt-3">
    <div class="col-md-6 text-center">
      <%= f.submit "編集内容を保存", class:"btn btn-success" %>
    </div>
    <div class="col-md-6 text-left">
      <%= link_to "退会する", confirm_unsubscribe_path, class:"btn btn-danger" %>
    </div>
  </div>
  <% end %>
</div>

